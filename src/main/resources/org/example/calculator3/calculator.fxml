<?xml version="1.0" encoding="UTF-8"?>
<GridPane fx:controller="CalculatorController" xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <!-- Display Field for Input and Result -->
    <TextField fx:id="displayField" editable="false" GridPane.columnSpan="4" />

    <!-- Row 1: Buttons 7, 8, 9, and Division (/) -->
    <Button text="7" onAction="#handleDigitAction" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button text="8" onAction="#handleDigitAction" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="9" onAction="#handleDigitAction" GridPane.rowIndex="1" GridPane.columnIndex="2" />
    <Button text="/" onAction="#handleOperatorAction" GridPane.rowIndex="1" GridPane.columnIndex="3" />

    <!-- Row 2: Buttons 4, 5, 6, and Multiplication (*) -->
    <Button text="4" onAction="#handleDigitAction" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Button text="5" onAction="#handleDigitAction" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Button text="6" onAction="#handleDigitAction" GridPane.rowIndex="2" GridPane.columnIndex="2" />
    <Button text="*" onAction="#handleOperatorAction" GridPane.rowIndex="2" GridPane.columnIndex="3" />

    <!-- Row 3: Buttons 1, 2, 3, and Subtraction (-) -->
    <Button text="1" onAction="#handleDigitAction" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Button text="2" onAction="#handleDigitAction" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button text="3" onAction="#handleDigitAction" GridPane.rowIndex="3" GridPane.columnIndex="2" />
    <Button text="-" onAction="#handleOperatorAction" GridPane.rowIndex="3" GridPane.columnIndex="3" />

    <!-- Row 4: Button 0, Decimal Point (.), Equals (=), and Addition (+) -->
    <Button text="0" onAction="#handleDigitAction" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="=" onAction="#handleEqualsAction" GridPane.rowIndex="4" GridPane.columnIndex="2" />
    <Button text="+" onAction="#handleOperatorAction" GridPane.rowIndex="4" GridPane.columnIndex="3" />

    <!-- Row 5: Clear Button spanning all columns -->
    <Button text="C" onAction="#handleClearAction" GridPane.rowIndex="5" GridPane.columnSpan="4" />
</GridPane>
